# =========================
# URLs de la App
# =========================
NEXT_PUBLIC_SITE_URL=https://TU-DOMINIO.com
NEXT_PUBLIC_BASE_URL=https://TU-DOMINIO.com

# =========================
# IA — Routing + Ahorro
# =========================
# Proveedor primario/secundario (coincide con /src/lib/env.ts)
AI_PRIMARY=gemini
AI_SECONDARY=openai

# Modo demo sin costo (1 = mock, 0 = IA real)
AI_MOCK=0

# Kill switch global IA (1 = off total)
AI_HARD_OFF=0

# Límite de tokens/respuesta cuando AI_MOCK=0
AI_MAX_TOKENS=250

# Rate limit simple por IP (0 para desactivar)
AI_RATE_LIMIT=10

# Bloquear override ?provider= en prod
AI_ALLOW_PROVIDER_OVERRIDE=0

# Timeout HTTP hacia proveedores IA (ms)
AI_HTTP_TIMEOUT_MS=12000

# =========================
# OpenAI
# =========================
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
# OPENAI_BASE_URL=https://api.openai.com/v1
# (UI opcional)
# NEXT_PUBLIC_AI_MODEL=gpt-4o-mini

# =========================
# Gemini (recomendado)
# =========================
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash-latest
# GEMINI_API_URL=https://generativelanguage.googleapis.com
NEXT_PUBLIC_GEMINI_MODEL=gemini-1.5-flash-latest

# =========================
# Stripe (Pagos)
# =========================
# 1 = MOCK (redirige a success) | 0 = Stripe real
STRIPE_MOCK=0
STRIPE_SECRET_KEY=YOUR_STRIPE_SECRET_KEY_HERE

STRIPE_WEBHOOK_SECRET=
# Public key para cliente (opcional)
NEXT_PUBLIC_STRIPE_PK=YOUR_STRIPE_PUBLISHABLE_KEY_HERE
# Conversión catálogo COP→USD si cobras USD
STRIPE_COP_USD_RATE=4000

# =========================
# Supabase
# =========================
# Cliente (expuesto al navegador)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
# Servidor / Webhooks (no público)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE=

# =========================
# Email (Resend)
# =========================
RESEND_API_KEY=
EMAIL_FROM="KCE <no-reply@TU-DOMINIO.com>"
EMAIL_REPLY_TO="Soporte KCE <soporte@TU-DOMINIO.com>"

# =========================
# Node/Next
# =========================
NODE_ENV=production
# Analytics opcional
NEXT_PUBLIC_GA_MEASUREMENT_ID=
